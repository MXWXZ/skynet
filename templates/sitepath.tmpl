<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>{{ .name }}</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          {{range .path}}
          {{if .Active}}
          <li class="breadcrumb-item active">{{ .Name }}</li>
          {{else}}
          <li class="breadcrumb-item"><a href={{ .Link }}>{{ .Name }}</a></li>
          {{end}}
          {{end}}
        </ol>
      </div>
    </div>
  </div>
</section>